@cscuBlue: #200D81;
@cscuYellow: #EBA801;

@heroUnitBackground: darken(#f2f2f2, 20%);

@navbarBackgroundHighlight: lighten(@cscuYellow, 25%);
@navbarBackground: @cscuYellow;
@navbarBrandColor: darken(@cscuYellow, 20%);
@navbarText: darken(@cscuYellow, 20%);
@navbarLinkColor: darken(@cscuYellow, 20%);
@navbarLinkColorHover: black;
@navbarSearchBackgroundFocus: lighten(@navbarBackground, 25%);
@navbarSearchPlaceholderColor: darken(@cscuYellow, 10%);

@linkColor: #01579f;
@linkColorHover: #0181eb;

body {
  background: #f2f2f2 url(<%= asset_data_uri 'noise.png' %>);
}

.navbar-inner {
  border-radius: 0
}

.navbar-search .search-query{
  color: inherit;
  &:focus {
    text-shadow: none;
  }
}
