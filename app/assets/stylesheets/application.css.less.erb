// # BOOTSTRAP

@import "twitter/bootstrap/bootstrap";
@import "twitter/bootstrap/responsive";

// Set the correct sprite paths
@iconSpritePath: asset-path("twitter/bootstrap/glyphicons-halflings.png");
@iconWhiteSpritePath: asset-path("twitter/bootstrap/glyphicons-halflings-white.png");

// Set the Font Awesome (Font Awesome is default. You can disable by commenting below lines)
// Note: If you use asset_path() here, your compiled bootstrap_and_overrides.css will not
//       have the proper paths. So for now we use the absolute path.
@fontAwesomeEotPath: asset-path("fontawesome-webfont.eot?v=3.0.2");
@fontAwesomeEotPath_iefix: asset-path("fontawesome-webfont.eot?#iefix&v=3.0.2");
@fontAwesomeWoffPath: asset-path("fontawesome-webfont.woff?v=3.0.2");
@fontAwesomeTtfPath: asset-path("fontawesome-webfont.ttf?v=3.0.2");

// Font Awesome
@import "fontawesome";

// Glyphicons
//@import "twitter/bootstrap/sprites.less";


// # OVERRIDES

@cscuBlue: #200D81;
@cscuYellow: #EBA801;

@heroUnitBackground: darken(#f2f2f2, 20%);

@navbarBackgroundHighlight: lighten(@cscuYellow, 25%);
@navbarBackground: @cscuYellow;
@navbarBrandColor: darken(@cscuYellow, 20%);
@navbarText: darken(@cscuYellow, 20%);
@navbarLinkColor: darken(@cscuYellow, 20%);
@navbarLinkColorHover: black;
@navbarSearchBackgroundFocus: lighten(@navbarBackground, 25%);
@navbarSearchPlaceholderColor: darken(@cscuYellow, 10%);

@linkColor: #01579f;
@linkColorHover: #0181eb;

body {
  background: #f2f2f2 url(<%= asset_data_uri 'noise.png' %>);
}

.navbar-inner {
  border-radius: 0
}

.navbar-search .search-query{
  color: inherit;
  &:focus {
    text-shadow: none;
  }
}
